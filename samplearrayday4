#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int list[MAX];
int n=0;

void insertAtBeg(int value){
    if(n==MAX){
        printf("List is Full !!\n");
        return;
    }
    for(int i=n-1;i>=0;i--){
        list[i+1]=list[i];
    }
    list[0]=value;
    n++;
    printf("Element Insrted ! ! !");
}
void insertAtEnd(int value){
    if(n==MAX){
        printf("List is full");
        return ;
    }
    list[n]=value;
    n++;
    printf("ElementInserted ! ! !\n");
    
}
void insertAtPoisition(int value ,int pos){
    if(n==MAX){
        printf("List is Full ");
    }
    else if(pos<0 || pos>n){
        printf("Invlid Poisition");
        return ;
    }

    else{
        for(int i=n-1;i>=pos;i--){
            list[pos]=value;
        }
        n++;
        printf("Element Inserted ! ! !\n");
    }    
}

void deleteFromBeg(){
    if(n==0){
        printf("List is Empty ! !");
        return ;
    }
    for(int i=0;i<n-1;i++){
        list[i]=list[i+1];
    }
    n--;   
    printf("Element is deleated");                                           
}
void deleteFromEnd(){
    if(n==0){
        printf("List is Empty ! !");
        return ;
    }
    n--;
    printf("Element is deleated");

}
void deleteFromPosition(int pos){
    if(n==0){
        printf("List is Empty");
        return ;
    }
    for(int i=pos;i<n;i++){
        list[i]=list[i+1];
    }
    n--;
    printf("Element deleated");
}
int search(int value){
    for(int i=0;i<n;i++){
        if(list[i]==value);
        return i;
    }
    return -1;

}
void updateList(int pos,int value){
    if(pos<0||pos>=n){
        printf("Invalid Poisition \n");
        return ;
    }
    list[pos]=value;
    printf("List Updated! !\n");
}
void bubbleSort(){
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1;j++){
            if(list[j]>list[j+1]){
                int temp=list[j];
                list[j]=list[j+1];
                list[j+1]=temp;
            }
        }
    }
}
void displayList(){
    if(n==0){
        printf("LIst Is Empty ! ! !");
        return;
    }
    for(int i=0;i<n;i++){
        printf("%d\t",list[i]);
    }
    printf("\n");
}
int main(){
   while(1){
    printf("1. Insertion in Beginning :\n");
    printf("2. Insert at End :\n");
    printf("3. Insert at any poisition: \n");
    printf("4. Delete from Beginning :\n");
    printf("5. Delete from End :\n");
    printf("6. Delete from At any Poisition :\n");
    printf("7. Display List :\n");
    printf("8. Search Element at list :\n ");
    printf("9. Update Element at list :\n ");
    printf("10. Sort Element at list :\n ");
    printf("11. Exit :\n");

    int choice,data,pos;
    printf("Enter Your Choice !!!");
    scanf("%d",&choice);
    switch(choice){
        case 1:
          printf("Enter Data:");
          scanf("%d",&data);
          insertAtBeg(data);
        break;
        case 2:
          printf("Enter Data:");
          scanf("%d",&data);
          insertAtEnd(data);
          break;
        case 3:
          printf("Enter poisition;");
          scanf("%d",&pos);
          printf("ENter Data");
          scanf("%d",&data);
          insertAtPoisition(pos,data);
          break;
        case 4:
        deleteFromBeg();
          break;
        case 5:
        deleteFromEnd();
          break;
        case 6:
        printf("Enter Poisition ");
        scanf("%d",&pos);
        deleteFromPosition(pos);
          break;
        case 7:
          displayList();
          break;
        case 8:
        printf("Enter searching element ");
        scanf("%d",&data);
        int index=search(data);
        if(index!=-1)
            printf("Element Found At Index %d\n",index);
        else
            printf("Element not Found\n");
        
          break;
        case 9:
        printf("Enter Poisition:");
        scanf("%d",&data);
        printf("Enter Data");
        scanf("%d",&data);
        updateList(pos,data);
          break;
        case 10:
        bubbleSort();
          break;
        case 11:
        exit(0);
          break;
        default:
        printf("Invali choice !!!");
    }
    printf("n\n");

   }
   return 0; 
}
