#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
 #include <stdio.h>

int main() {
    int N;
    int n500, n100, n50, n20, n10, n5, n2, n1;

    scanf("%d", &N);

    n500 = N / 500;
    N = N % 500;

    n100 = N / 100;
    N = N % 100;

    n50 = N / 50;
    N = N % 50;   

    n20 = N / 20;
    N = N % 20;

    n10 = N / 10;
    N = N % 10;

    n5 = N / 5;
    N = N % 5;

    n2 = N / 2;
    N = N % 2;

    n1 = N / 1;
    N = N % 1;

    if (n500) printf("500: %d\n", n500);
    if (n100) printf("100: %d\n", n100);
    if (n50)  printf("50: %d\n", n50);
    if (n20)  printf("20: %d\n", n20);
    if (n10)  printf("10: %d\n", n10);
    if (n5)   printf("5: %d\n", n5);
    if (n2)   printf("2: %d\n", n2);
    if (n1)   printf("1: %d\n", n1);

    return 0;
}
